cat > .gitignore <<'EOF'
# keep Assets folder but ignore its contents
Assets/**
!Assets/.gitkeep

# never commit virtualenvs, build artifacts, audio, models
.venv/
venv/
__pycache__/
*.py[cod]
*.log
dist/
build/
*.wav
*.mp4
*.bin
*.onnx
*.pth
*.ckpt
*.safetensors
*.carpa
*.fst
*.pv
*.ppn
tools/asr_tester/sessions/
.DS_Store
EOF

touch Assets/.gitkeep
git add .gitignore Assets/.gitkeep
git commit -m "hygiene: ignore Assets contents, venv, models, artifacts"